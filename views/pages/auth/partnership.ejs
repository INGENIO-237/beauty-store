<section class="partnership-section section-padding">
    <div class="section-overlay"></div>

    <div class="container">
        <div class="row">

            <div class="col-lg-6 col-10 mx-auto">
                <form class="custom-form partnership-form mb-5 mb-lg-0" action="" method="post" role="form">
                    <h2 class="text-center mb-4">Get started here</h2>

                    <div class="partnership-form-body">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-12">
                                <input type="text" name="name" id="name" class="form-control"
                                    placeholder="Company name" required>
                            </div>

                            <div class="col-lg-6 col-md-6 col-12">
                                <input type="email" name="email" id="email"
                                    pattern="[^ @]*@[^ @]*" class="form-control" placeholder="Email address" required>
                            </div>
                        </div>

                        <input type="password" class="form-control" name="password" placeholder="Password" required>
                        <input type="tel" class="form-control" name="phone" placeholder="Ph 085-456-7890" required="">

                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-12">
                                    <input type="text" name="location" id="location" class="form-control"
                                        placeholder="Location" required>
                                </div>
                            </div>

                        <div class="col-lg-4 col-md-10 col-8 mx-auto">
                            <button type="submit" class="form-control">Send</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
</section>